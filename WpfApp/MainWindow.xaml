<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Button Padding="5" Click="OnStartEvfClick">StartEvf</Button>
            <Button Padding="5" Margin="10 0 0 0" Click="OnEndEvfClick">EndEvf</Button>
            <Button Padding="5" Margin="10 0 0 0" Click="OnTakePictureClick">TakePicture</Button>
            <Button Padding="5" Margin="10 0 0 0" Click="OnBeginRecordClick">BeginRecord</Button>
            <Button Padding="5" Margin="10 0 0 0" Click="OnEndRecordClick">EndRecord</Button>
        </StackPanel>
        <Image x:Name="img" />
    </DockPanel>
</Window>
